<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javaprogrammingjavafx.SignController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label style="-fx-font-size: 40px;"> Maltepe University </Label>


    <HBox alignment="CENTER" spacing="20.0" fx:id="signButtonsHBOX">
        <Button text="Sign In" onAction="#signInButtonClick"/>
        <Button text="Sign Up" onAction="#signUpButtonClick"/>
    </HBox>

    <HBox alignment="CENTER" visible="false" spacing="20.0" fx:id="signInHBOX">
        <Label> ID: </Label>
        <TextField fx:id="idSignInTextField"> </TextField>
        <Label> Password: </Label>
        <PasswordField fx:id="passwordSignInField"> </PasswordField>
        <Button> Submit </Button>
    </HBox>

    <HBox alignment="CENTER" visible="false" spacing="20.0" fx:id="signUpHBOX">
        <Label> ID: </Label>
        <TextField fx:id="idSignUpTextField"> </TextField>
        <Label> Password: </Label>
        <PasswordField fx:id="passwordSignUpField"> </PasswordField>
        <Button> Submit </Button>
    </HBox>



</VBox>

